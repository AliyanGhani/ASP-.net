@model Admin.Models.Customer

@{
    ViewData["Title"] = "My Account - Java Florist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Main Styles */
    .account-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1519378058457-4c29a0a2efac?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        padding: 200px 20px;
        margin-bottom: 40px;
        border-radius: 15px;
    }

        .page-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            margin-bottom: 20px;
        }

    /* Account Dashboard */
    .account-dashboard {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 30px;
        margin-bottom: 50px;
    }

    /* Sidebar Navigation */
    .account-sidebar {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 25px;
        height: fit-content;
        position: sticky;
        top: 100px;
    }

    .user-profile {
        text-align: center;
        padding: 20px 0;
        border-bottom: 2px solid rgba(255, 255, 255, 0.3);
        margin-bottom: 25px;
    }

    .user-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        border: 4px solid white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .user-name {
        font-size: 24px;
        margin-bottom: 5px;
        color: #000;
        font-weight: bold;
    }

    .user-email {
        color: #666;
        font-size: 14px;
        background: rgba(255, 255, 255, 0.7);
        padding: 5px 10px;
        border-radius: 20px;
        display: inline-block;
    }

    .account-menu {
        list-style: none;
    }

        .account-menu li {
            margin-bottom: 8px;
        }

        .account-menu a {
            display: flex;
            align-items: center;
            padding: 15px;
            color: #000;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 500;
            background: rgba(255, 255, 255, 0.5);
        }

            .account-menu a:hover, .account-menu a.active {
                background: rgba(255, 255, 255, 0.9);
                transform: translateX(10px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .account-menu i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
            font-size: 18px;
        }

    /* Account Content */
    .account-content {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 35px;
    }

    .content-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #FFDAB9;
    }

        .content-header h2 {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            color: #000;
            margin: 0;
        }

    /* Profile Card */
    .profile-card {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
    }

    .profile-avatar {
        font-size: 80px;
        color: #000;
        margin-right: 25px;
    }

    .profile-info h3 {
        font-size: 28px;
        margin-bottom: 5px;
        color: #000;
    }

    .profile-info p {
        color: #666;
        margin: 0;
    }

    .profile-details {
        background: rgba(255, 255, 255, 0.8);
        padding: 25px;
        border-radius: 12px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        padding: 10px 0;
    }

        .detail-item i {
            font-size: 20px;
            color: #000;
            margin-right: 15px;
            width: 25px;
            text-align: center;
        }

        .detail-item strong {
            color: #000;
            margin-right: 10px;
        }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        color: #000;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        font-size: 35px;
        margin-bottom: 15px;
    }

    .stat-number {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
    }

    /* Order Table */
    .order-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .order-table th {
            background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
            color: #000;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            border: none;
        }

        .order-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

        .order-table tr:hover {
            background-color: rgba(255, 218, 185, 0.1);
        }

        .order-table tr:last-child td {
            border-bottom: none;
        }

    /* Status Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-pending {
        background: #FFF3CD;
        color: #856404;
    }

    .status-confirmed {
        background: #D1ECF1;
        color: #0C5460;
    }

    .status-delivered {
        background: #D4EDDA;
        color: #155724;
    }

    .status-cancelled {
        background: #F8D7DA;
        color: #721C24;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        color: #000;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-outline {
        background: transparent;
        border: 2px solid #FFDAB9;
        color: #000;
    }

        .btn-outline:hover {
            background: #FFDAB9;
            transform: translateY(-2px);
        }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    /* Quick Actions */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .action-card {
        background: white;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        border: 2px solid transparent;
    }

        .action-card:hover {
            transform: translateY(-5px);
            border-color: #FFDAB9;
        }

        .action-card i {
            font-size: 40px;
            margin-bottom: 15px;
            color: #000;
        }

        .action-card h5 {
            margin-bottom: 10px;
            color: #000;
        }

        .action-card p {
            color: #666;
            margin-bottom: 15px;
            font-size: 14px;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 50px 20px;
        color: #666;
    }

        .empty-state i {
            font-size: 60px;
            margin-bottom: 20px;
            color: #FFDAB9;
        }

        .empty-state h5 {
            margin-bottom: 10px;
            color: #000;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .account-dashboard {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .account-sidebar {
            position: static;
        }

        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .profile-avatar {
            margin-right: 0;
            margin-bottom: 15px;
        }

        .content-header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .quick-actions {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .profile-details {
            grid-template-columns: 1fr;
        }
    }
</style>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>My Account</h1>
        <p>Manage your profile, orders, and preferences</p>
    </div>
</section>

<!-- Account Dashboard -->
<div class="account-container">
    <div class="account-dashboard">
        <!-- Sidebar Navigation -->
        <div class="account-sidebar">
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <h3 class="user-name">@Model.F_name @Model.L_name</h3>
                <p class="user-email">Customer since @Model.Dob.Year</p>
            </div>

            <ul class="account-menu">
                <li><a href="#" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="#"><i class="fas fa-user"></i> Profile Information</a></li>
                <li><a href="#"><i class="fas fa-shopping-bag"></i> Order History</a></li>
                <li><a href="#"><i class="fas fa-map-marker-alt"></i> Address Book</a></li>
                <li><a href="#"><i class="fas fa-heart"></i> Wishlist</a></li>
                <li><a href="#"><i class="fas fa-lock"></i> Change Password</a></li>
                <li><a href="#"><i class="fas fa-gift"></i> Payment Methods</a></li>
                <li><a href="#"><i class="fas fa-bell"></i> Notifications</a></li>
                <li><a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="account-content">
            <!-- Content Header -->
            <div class="content-header">
                <h2>Account Dashboard</h2>
                <a href="#" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
            </div>

            <!-- Profile Information -->
            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="profile-info">
                        <h3>@Model.F_name @Model.L_name</h3>
                        <p>🌟 Valued Customer</p>
                    </div>
                </div>

                <div class="profile-details">
                    <div class="detail-item">
                        <i class="fas fa-phone"></i>
                        <strong>Phone:</strong>
                        <span>@Model.P_no</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-birthday-cake"></i>
                        <strong>Date of Birth:</strong>
                        <span>@Model.Dob.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-venus-mars"></i>
                        <strong>Gender:</strong>
                        <span>@(Model.Gender == 'M' ? "Male" : Model.Gender == 'F' ? "Female" : "Other")</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <strong>Address:</strong>
                        <span>@Model.Address</span>
                    </div>
                </div>
            </div>

            <!-- Stats Overview -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-shopping-bag"></i></div>
                    <div class="stat-number">@(Model.Orders?.Count ?? 0)</div>
                    <div class="stat-label">Total Orders</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-heart"></i></div>
                    <div class="stat-number">0</div>
                    <div class="stat-label">Wishlist Items</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-star"></i></div>
                    <div class="stat-number">@(Model.Orders?.Count * 10 ?? 0)</div>
                    <div class="stat-label">Loyalty Points</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-calendar-check"></i></div>
                    <div class="stat-number">@(Model.Dob.Year)</div>
                    <div class="stat-label">Member Since</div>
                </div>
            </div>

            <!-- Order History -->
            <h3 style="margin-bottom: 20px; color: #000; font-family: 'Playfair Display', serif;">Order History</h3>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <table class="order-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                        {
                            <tr>
                                <td><strong>#@order.OrderId</strong></td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div style="display: flex; flex-wrap: wrap; gap: 5px;">
                                        @foreach (var item in order.OrderItems.Take(2))
                                        {
                                            <span style="background: #FFDAB9; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                                @item.Product.Pro_name
                                            </span>
                                        }
                                        @if (order.OrderItems.Count > 2)
                                        {
                                            <span style="background: #C1E1C1; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                                +@(order.OrderItems.Count - 2) more
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td><strong>Rs @order.TotalAmount</strong></td>
                                <td>
                                    <span class="status-badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("OrderDetails", "Order", new { id = order.OrderId })"
                                       class="btn btn-outline btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-shopping-cart"></i>
                    <h5>No Orders Yet</h5>
                    <p>You haven't placed any orders yet.</p>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                        <i class="fas fa-shopping-bag"></i> Start Shopping
                    </a>
                </div>
            }

            <!-- Quick Actions -->
            <div class="quick-actions">
                <div class="action-card">
                    <i class="fas fa-shopping-cart"></i>
                    <h5>Cart</h5>
                    <p>View your shopping cart</p>
                    <a asp-action="ViewCart" asp-controller="Cart" class="btn btn-outline">View Cart</a>
                </div>
                <div class="action-card">
                    <i class="fas fa-heart"></i>
                    <h5>Wishlist</h5>
                    <p>Your saved items</p>
                    <a href="#" class="btn btn-outline">View Wishlist</a>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "status-pending",
            "confirmed" => "status-confirmed",
            "delivered" => "status-delivered",
            "cancelled" => "status-cancelled",
            _ => "status-pending"
        };
    }
}
@model Admin.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<style>
    .container {
        max-width: 1200px;
        padding: 40px 20px;
    }

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
        background: white;
    }

    .card-body {
        padding: 50px 30px;
    }

    .text-success {
        color: #4CAF50 !important;
    }

    h1 {
        font-family: 'Playfair Display', serif;
        color: #000;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 2.5rem;
    }

    .lead {
        font-size: 1.3rem;
        color: #666;
        margin-bottom: 30px;
        font-weight: 400;
    }

    .fa-check-circle {
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    .order-details-card {
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border: 2px solid #e9ecef;
        border-radius: 15px;
        padding: 30px;
        margin: 20px 0;
    }

        .order-details-card h4 {
            font-family: 'Playfair Display', serif;
            color: #000;
            font-weight: 700;
            margin-bottom: 25px;
            text-align: center;
            position: relative;
        }

            .order-details-card h4:after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: linear-gradient(to right, #4CAF50, #81C784);
                border-radius: 2px;
            }

        .order-details-card p {
            font-size: 1.1rem;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .order-details-card p:last-child {
                border-bottom: none;
            }

        .order-details-card strong {
            color: #333;
            font-weight: 600;
        }

    .badge {
        font-size: 0.9rem;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 600;
    }

    .bg-success {
        background: linear-gradient(135deg, #4CAF50, #45a049) !important;
    }

    .btn {
        border: none;
        border-radius: 50px;
        padding: 12px 30px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        margin: 5px 10px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        color: #000;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 218, 185, 0.3);
            color: #000;
        }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d, #5a6268);
        color: white;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
            color: white;
        }

    .confirmation-animation {
        position: relative;
    }

    .confetti {
        position: absolute;
        width: 10px;
        height: 10px;
        background: #4CAF50;
        border-radius: 50%;
        animation: confetti-fall 3s ease-in-out infinite;
    }

    @@keyframes confetti-fall {
        0% {
            transform: translateY(-100px) rotate(0deg);
            opacity: 1;
        }

        100% {
            transform: translateY(500px) rotate(360deg);
            opacity: 0;
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .card-body {
            padding: 30px 20px;
        }

        h1 {
            font-size: 2rem;
        }

        .lead {
            font-size: 1.1rem;
        }

        .order-details-card {
            padding: 20px;
        }

            .order-details-card p {
                flex-direction: column;
                text-align: center;
                gap: 5px;
            }

        .btn {
            display: block;
            width: 100%;
            margin: 10px 0;
        }
    }

    @@media (max-width: 576px) {
        .container {
            padding: 20px 15px;
        }

        .card-body {
            padding: 20px 15px;
        }

        h1 {
            font-size: 1.8rem;
        }

        .fa-check-circle {
            font-size: 4rem;
        }
    }
</style>

<div class="container text-center">
    <div class="card shadow">
        <div class="card-body py-5 confirmation-animation">
            <div class="text-success mb-4">
                <i class="fas fa-check-circle fa-5x"></i>
            </div>
            <h1 class="text-success">Order Placed Successfully!</h1>
            <p class="lead">Thank you for your order. We'll deliver it soon with love and care. 💐</p>

            <div class="row justify-content-center mt-4">
                <div class="col-md-8 col-lg-6">
                    <div class="order-details-card">
                        <h4>Order Details</h4>
                        <p><strong>Order ID:</strong> <span>#@Model.OrderId</span></p>
                        <p><strong>Order Date:</strong> <span>@Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</span></p>
                        <p><strong>Total Amount:</strong> <span>Rs @Model.TotalAmount</span></p>
                        <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("MyOrders", "Order")" class="btn btn-primary">
                            <i class="fas fa-list-alt me-2"></i>View My Orders
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add some celebration effect
        const confirmationDiv = document.querySelector('.confirmation-animation');

        // Create confetti effect
        for (let i = 0; i < 20; i++) {
            setTimeout(() => {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.background = getRandomColor();
                confetti.style.animationDelay = Math.random() * 2 + 's';
                confirmationDiv.appendChild(confetti);

                // Remove confetti after animation
                setTimeout(() => {
                    confetti.remove();
                }, 3000);
            }, i * 100);
        }

        function getRandomColor() {
            const colors = ['#4CAF50', '#81C784', '#FFDAB9', '#C1E1C1', '#FFB6C1', '#87CEEB'];
            return colors[Math.floor(Math.random() * colors.length)];
        }
    });
</script>
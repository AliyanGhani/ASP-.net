@model List<Admin.Models.Order>
@{
    ViewData["Title"] = "My Orders";

    // Helper function for status badge
    string GetStatusBadge(string status)
    {
        switch (status.ToLower())
        {
            case "delivered": return "success";
            case "pending": return "warning";
            case "processing": return "info";
            case "cancelled": return "danger";
            default: return "primary";
        }
    }
}

<style>
    .container {
        max-width: 1200px;
        padding: 30px 20px;
    }

    h2 {
        font-family: 'Playfair Display', serif;
        color: #000;
        font-weight: 700;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 15px;
    }

        h2:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #4CAF50, #81C784);
            border-radius: 2px;
        }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 20px;
        overflow: hidden;
        background: white;
        transition: all 0.3s ease;
        border-left: 4px solid #4CAF50;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

    .card-header {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        color: #000;
        border-bottom: none;
        padding: 20px 25px;
    }

        .card-header h5 {
            color: #000;
            margin: 0;
            font-weight: 700;
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
        }

    .card-body {
        padding: 25px;
    }

    .badge {
        font-size: 0.85rem;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 600;
        border: none;
    }

    .bg-success {
        background: linear-gradient(135deg, #4CAF50, #45a049) !important;
    }

    .bg-warning {
        background: linear-gradient(135deg, #ffc107, #e0a800) !important;
        color: #000 !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #17a2b8, #138496) !important;
    }

    .bg-primary {
        background: linear-gradient(135deg, #007bff, #0056b3) !important;
    }

    .bg-danger {
        background: linear-gradient(135deg, #dc3545, #c82333) !important;
    }

    .card-body p {
        font-size: 1rem;
        margin-bottom: 12px;
        color: #555;
    }

    .card-body strong {
        color: #333;
        font-weight: 600;
        min-width: 120px;
        display: inline-block;
    }

    .btn {
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-outline-primary {
        background: transparent;
        border: 2px solid #4CAF50;
        color: #4CAF50;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
        }

    .btn-primary {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        color: #000;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 218, 185, 0.3);
            color: #000;
        }

    .alert-info {
        background: linear-gradient(135deg, #d1ecf1, #bee5eb);
        border: 1px solid #b6d4fe;
        border-radius: 15px;
        color: #0c5460;
        text-align: center;
        padding: 40px 30px;
    }

        .alert-info h4 {
            color: #0c5460;
            font-family: 'Playfair Display', serif;
            margin-bottom: 15px;
        }

        .alert-info p {
            font-size: 1.1rem;
            margin-bottom: 20px;
            color: #0c5460;
        }

    .order-status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        display: inline-block;
    }

    .status-delivered .status-dot {
        background: #4CAF50;
    }

    .status-pending .status-dot {
        background: #ffc107;
    }

    .status-processing .status-dot {
        background: #17a2b8;
    }

    .status-cancelled .status-dot {
        background: #dc3545;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .container {
            padding: 20px 15px;
        }

        .card-header {
            padding: 15px 20px;
        }

        .card-body {
            padding: 20px;
        }

            .card-body .row {
                flex-direction: column;
                gap: 15px;
            }

        .col-md-6.text-end {
            text-align: left !important;
        }

        .btn {
            width: 100%;
            text-align: center;
        }
    }

    @@media (max-width: 576px) {
        h2 {
            font-size: 1.8rem;
            text-align: center;
        }

            h2:after {
                left: 50%;
                transform: translateX(-50%);
            }

        .card-header h5 {
            font-size: 1.1rem;
        }

        .badge {
            font-size: 0.75rem;
            padding: 6px 12px;
        }
    }
</style>

<div class="container">
    <h2>My Orders</h2>

    @if (Model.Any())
    {
        foreach (var order in Model)
        {
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5>Order #@order.OrderId</h5>
                        <span class="badge bg-@GetStatusBadge(order.Status) order-status-indicator status-@order.Status.ToLower()">
                            <span class="status-dot"></span>
                            @order.Status
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <p><strong>Order Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                            <p><strong>Total Amount:</strong> Rs @order.TotalAmount</p>
                            <p>
                                <strong>Payment Status:</strong>
                                <span class="badge bg-@(order.PaymentStatus == "Paid" ? "success" : "warning")">
                                    @order.PaymentStatus
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <a href="@Url.Action("OrderDetails", "Order", new { id = order.OrderId })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <div class="mb-4">
                <i class="fas fa-shopping-bag fa-4x text-info mb-3"></i>
            </div>
            <h4>No orders found</h4>
            <p>You haven't placed any orders yet. Start your floral journey with us!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag me-2"></i>Start Shopping
            </a>
        </div>
    }
</div>
@model Admin.Models.Category
@{
    ViewData["Title"] = "Add New Category";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Add New Category</h2>
    <a href="@Url.Action("Categories")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Categories
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Category Details</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AddCategory" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryName" class="form-label">Category Name *</label>
                                <input asp-for="CategoryName" class="form-control" placeholder="Enter category name">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IsActive" class="form-label">Status</label>
                                <select asp-for="IsActive" class="form-select">
                                    <option value="true">Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryImage" class="form-label">Category Image</label>
                        <input asp-for="CategoryImage" type="file" class="form-control" accept=".jpg,.jpeg,.png,.webp,.jfif">
                        <div class="form-text">Supported formats: JPG, JPEG, PNG, WEBP, JFIF (Max 10MB)</div>
                        <span asp-validation-for="CategoryImage" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Add Category
                        </button>
                        <a href="@Url.Action("Categories")" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
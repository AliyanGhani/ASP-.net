@model IEnumerable<Admin.Models.Customer>
@{
    ViewData["Title"] = "Manage Customers";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Manage Customers</h2>
        <span class="badge bg-primary fs-6" style="background: linear-gradient(135deg, #FFDAB9, #C1E1C1) !important; color: #000 !important;">Total: @Model.Count() Customers</span>
    </div>

    <div class="card">
        <div class="card-header" style="background: linear-gradient(135deg, #FFDAB9, #C1E1C1) !important; border-radius: 15px 15px 0 0 !important;">
            <h5 class="mb-0" style="color: #000; font-weight: 600;"><i class="fas fa-list"></i> All Customers</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Orders</th>
                            <th>Total Spent</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            var orderCount = customer.Orders?.Count ?? 0;
                            var totalSpent = customer.Orders?
                            .Where(o => o.PaymentStatus == "Paid")
                            .Sum(o => o.TotalAmount) ?? 0;

                            <tr>
                                <td>@customer.Custid</td>
                                <td>
                                    <strong>@customer.F_name @customer.L_name</strong>
                                </td>
                                <td>
                                    <i class="fas fa-phone text-success me-1"></i>
                                    @customer.P_no
                                </td>
                                <td>@customer.Dob.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (customer.Gender == 'M')
                                    {
                                        <span class="badge bg-info"><i class="fas fa-mars"></i> Male</span>
                                    }
                                    else if (customer.Gender == 'F')
                                    {
                                        <span class="badge bg-warning"><i class="fas fa-venus"></i> Female</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Other</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted" data-bs-toggle="tooltip" title="@customer.Address">
                                        @(customer.Address.Length > 30 ? customer.Address.Substring(0, 30) + "..." : customer.Address)
                                    </small>
                                </td>
                                <td>
                                    <span class="badge @(orderCount > 0 ? "bg-success" : "bg-secondary")">
                                        @orderCount order(s)
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">Rs @totalSpent</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <!-- Customer Details Button -->
                                        <button class="btn btn-outline-primary view-details"
                                                data-bs-toggle="modal"
                                                data-bs-target="#detailsModal"
                                                data-customer-id="@customer.Custid"
                                                data-customer-name="@customer.F_name @customer.L_name"
                                                data-customer-phone="@customer.P_no"
                                                data-customer-dob="@customer.Dob.ToString("MMM dd, yyyy")"
                                                data-customer-gender="@customer.Gender"
                                                data-customer-address="@customer.Address">
                                            <i class="fas fa-eye"></i> Details
                                        </button>

                                        <!-- Analytics Button -->
                                        <button class="btn btn-outline-info view-analytics"
                                                data-bs-toggle="modal"
                                                data-bs-target="#analyticsModal"
                                                data-customer-id="@customer.Custid">
                                            <i class="fas fa-chart-line"></i> Analytics
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">No Customers Found</h4>
                    <p class="text-muted">No customers have registered yet.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Customer Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #FFDAB9, #C1E1C1); border-radius: 10px 10px 0 0;">
                <h5 class="modal-title" id="detailsModalLabel" style="color: #000; font-weight: 600;">
                    <i class="fas fa-user-circle"></i> Customer Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Customer Information -->
                    <div class="col-md-6">
                        <div class="card h-100" style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <div class="card-header bg-light">
                                <h6 class="mb-0" style="color: #000; font-weight: 600;"><i class="fas fa-info-circle"></i> Basic Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="customer-info">
                                    <div class="info-item mb-3">
                                        <strong><i class="fas fa-id-card text-primary me-2"></i>Customer ID:</strong>
                                        <span id="details-customer-id" class="float-end"></span>
                                    </div>
                                    <div class="info-item mb-3">
                                        <strong><i class="fas fa-user text-primary me-2"></i>Full Name:</strong>
                                        <span id="details-customer-name" class="float-end"></span>
                                    </div>
                                    <div class="info-item mb-3">
                                        <strong><i class="fas fa-phone text-success me-2"></i>Phone Number:</strong>
                                        <span id="details-customer-phone" class="float-end"></span>
                                    </div>
                                    <div class="info-item mb-3">
                                        <strong><i class="fas fa-birthday-cake text-warning me-2"></i>Date of Birth:</strong>
                                        <span id="details-customer-dob" class="float-end"></span>
                                    </div>
                                    <div class="info-item">
                                        <strong><i class="fas fa-venus-mars text-info me-2"></i>Gender:</strong>
                                        <span id="details-customer-gender" class="float-end"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Address Information -->
                    <div class="col-md-6">
                        <div class="card h-100" style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <div class="card-header bg-light">
                                <h6 class="mb-0" style="color: #000; font-weight: 600;"><i class="fas fa-map-marker-alt"></i> Address Details</h6>
                            </div>
                            <div class="card-body">
                                <div class="address-info">
                                    <p id="details-customer-address" class="text-muted mb-0"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 20px;">
                    <i class="fas fa-times"></i> Close
                </button>
                <button type="button" class="btn btn-primary" onclick="viewCustomerOrders()" style="border-radius: 20px; background: linear-gradient(135deg, #FFDAB9, #C1E1C1); border: none; color: #000;">
                    <i class="fas fa-list"></i> View Orders
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Customer Analytics Modal -->
<div class="modal fade" id="analyticsModal" tabindex="-1" aria-labelledby="analyticsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #FFDAB9, #C1E1C1); border-radius: 10px 10px 0 0;">
                <h5 class="modal-title" id="analyticsModalLabel" style="color: #000; font-weight: 600;">
                    <i class="fas fa-chart-line"></i> Customer Analytics
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Loading Spinner -->
                <div id="loadingSpinner" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Loading customer analytics...</p>
                </div>

                <!-- Customer Analytics Content -->
                <div id="customerAnalytics" style="display: none;">
                    <!-- Analytics content will be loaded here dynamically -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="border-radius: 20px;">
                    <i class="fas fa-times"></i> Close
                </button>
                <button type="button" class="btn btn-primary" onclick="viewAllOrders()" style="border-radius: 20px; background: linear-gradient(135deg, #FFDAB9, #C1E1C1); border: none; color: #000;">
                    <i class="fas fa-list"></i> View All Orders
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Store current customer ID globally
        let currentCustomerId = null;

        // Customer Details Modal
        document.querySelectorAll('.view-details').forEach(button => {
            button.addEventListener('click', function() {
                currentCustomerId = this.getAttribute('data-customer-id');

                // Set basic information
                document.getElementById('details-customer-id').textContent = '#' + currentCustomerId;
                document.getElementById('details-customer-name').textContent = this.getAttribute('data-customer-name');
                document.getElementById('details-customer-phone').textContent = this.getAttribute('data-customer-phone');
                document.getElementById('details-customer-dob').textContent = this.getAttribute('data-customer-dob');

                // Set gender with badge
                const gender = this.getAttribute('data-customer-gender');
                const genderBadge = gender === 'M' ?
                    '<span class="badge bg-info"><i class="fas fa-mars"></i> Male</span>' :
                    gender === 'F' ?
                    '<span class="badge bg-warning"><i class="fas fa-venus"></i> Female</span>' :
                    '<span class="badge bg-secondary">Other</span>';
                document.getElementById('details-customer-gender').innerHTML = genderBadge;

                document.getElementById('details-customer-address').textContent = this.getAttribute('data-customer-address');

                // Update modal title
                document.getElementById('detailsModalLabel').innerHTML =
                    '<i class="fas fa-user-circle"></i> ' + this.getAttribute('data-customer-name');
            });
        });

        // Customer Analytics Modal
        document.querySelectorAll('.view-analytics').forEach(button => {
            button.addEventListener('click', function() {
                currentCustomerId = this.getAttribute('data-customer-id');
                console.log('Opening analytics for customer:', currentCustomerId);

                // ✅ SAFE: Wait for modal to fully load
                setTimeout(() => {
                    initializeAnalyticsModal(currentCustomerId);
                }, 100);
            });
        });

        function initializeAnalyticsModal(customerId) {
            // ✅ SAFE: Check if elements exist
            const loadingSpinner = document.getElementById('loadingSpinner');
            const customerAnalytics = document.getElementById('customerAnalytics');

            if (!loadingSpinner || !customerAnalytics) {
                console.error('Analytics modal elements not found');
                return;
            }

            // Show loading, hide content
            loadingSpinner.style.display = 'block';
            customerAnalytics.style.display = 'none';

            // Clear previous content and set template
            customerAnalytics.innerHTML = getAnalyticsHTMLTemplate();

            // Fetch customer statistics
            fetchCustomerStatistics(customerId);
        }

        function getAnalyticsHTMLTemplate() {
            return `
                <!-- Key Metrics -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h6 style="color: #2c3e50; font-weight: 600;"><i class="fas fa-tachometer-alt"></i> Key Performance Metrics</h6>
                        <div class="row">
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-primary" id="metric-total-orders">0</div>
                                    <div class="metric-label">Total Orders</div>
                                </div>
                            </div>
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-success" id="metric-total-spent">Rs 0</div>
                                    <div class="metric-label">Total Spent</div>
                                </div>
                            </div>
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-info" id="metric-avg-order">Rs 0</div>
                                    <div class="metric-label">Avg. Order Value</div>
                                </div>
                            </div>
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-warning" id="metric-total-items">0</div>
                                    <div class="metric-label">Items Ordered</div>
                                </div>
                            </div>
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-purple" id="metric-order-frequency">0</div>
                                    <div class="metric-label">Days Between Orders</div>
                                </div>
                            </div>
                            <div class="col-md-2 col-6 mb-3">
                                <div class="metric-card text-center">
                                    <div class="metric-value text-danger" id="metric-success-rate">0%</div>
                                    <div class="metric-label">Success Rate</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Status Breakdown -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card h-100" style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <div class="card-header bg-light">
                                <h6 class="mb-0" style="color: #000; font-weight: 600;"><i class="fas fa-chart-pie"></i> Order Status Breakdown</h6>
                            </div>
                            <div class="card-body">
                                <div class="status-breakdown">
                                    <div class="status-item d-flex justify-content-between mb-2">
                                        <span class="badge bg-warning">Pending</span>
                                        <strong id="status-pending">0</strong>
                                    </div>
                                    <div class="status-item d-flex justify-content-between mb-2">
                                        <span class="badge bg-info">Confirmed</span>
                                        <strong id="status-confirmed">0</strong>
                                    </div>
                                    <div class="status-item d-flex justify-content-between mb-2">
                                        <span class="badge bg-success">Delivered</span>
                                        <strong id="status-delivered">0</strong>
                                    </div>
                                    <div class="status-item d-flex justify-content-between">
                                        <span class="badge bg-danger">Cancelled</span>
                                        <strong id="status-cancelled">0</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card h-100" style="border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                            <div class="card-header bg-light">
                                <h6 class="mb-0" style="color: #000; font-weight: 600;"><i class="fas fa-star"></i> Customer Insights</h6>
                            </div>
                            <div class="card-body">
                                <div class="insights">
                                    <div class="insight-item mb-3">
                                        <strong>Last Order:</strong><br>
                                        <span id="insight-last-order" class="text-muted">No orders</span>
                                    </div>
                                    <div class="insight-item mb-3">
                                        <strong>Favorite Category:</strong><br>
                                        <span id="insight-category" class="text-muted">No data</span>
                                    </div>
                                    <div class="insight-item">
                                        <strong>Payment Success:</strong><br>
                                        <span id="insight-payment" class="text-muted">0 successful / 0 failed</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function fetchCustomerStatistics(customerId) {
            console.log('Fetching analytics for customer:', customerId);

            // ✅ FIXED: Use hardcoded URL to avoid routing issues
            const url = `/Admin/GetCustomerStatistics?customerId=${customerId}`;
            console.log('Fetch URL:', url);

            fetch(url)
                .then(response => {
                    console.log('Response status:', response.status);

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Received data:', data);
                    updateAnalyticsUI(data, customerId);
                })
                .catch(error => {
                    console.error('Fetch error:', error);
                    showAnalyticsError('Network error: ' + error.message);
                });
        }

        function updateAnalyticsUI(data, customerId) {
            // ✅ SAFE: Get elements again
            const loadingSpinner = document.getElementById('loadingSpinner');
            const customerAnalytics = document.getElementById('customerAnalytics');

            if (!loadingSpinner || !customerAnalytics) {
                console.error('Analytics elements not found during update');
                return;
            }

            // Hide loading, show content
            loadingSpinner.style.display = 'none';
            customerAnalytics.style.display = 'block';

            if (data.success) {
                // ✅ SAFE: Update metrics with null checks
                safeUpdateElement('metric-total-orders', data.totalOrders || 0);
                safeUpdateElement('metric-total-spent', 'Rs ' + (data.totalSpent || 0));
                safeUpdateElement('metric-avg-order', 'Rs ' + (data.averageOrderValue || 0));
                safeUpdateElement('metric-total-items', data.totalItemsOrdered || 0);
                safeUpdateElement('metric-order-frequency', (data.averageDaysBetweenOrders || 0) + ' days');

                // Calculate success rate
                const successRate = data.totalOrders > 0 ?
                    Math.round(((data.deliveredOrders || 0) / data.totalOrders) * 100) : 0;
                safeUpdateElement('metric-success-rate', successRate + '%');

                // Update order status breakdown
                safeUpdateElement('status-pending', data.pendingOrders || 0);
                safeUpdateElement('status-confirmed', data.confirmedOrders || 0);
                safeUpdateElement('status-delivered', data.deliveredOrders || 0);
                safeUpdateElement('status-cancelled', data.cancelledOrders || 0);

                // Update insights
                safeUpdateElement('insight-last-order',
                    (data.lastOrderDate || 'No orders') +
                    (data.lastOrderAmount > 0 ? ' (Rs ' + data.lastOrderAmount + ')' : '')
                );

                safeUpdateElement('insight-category',
                    (data.popularCategory || 'No data') +
                    (data.popularCategoryCount > 0 ? ' (' + data.popularCategoryCount + ' orders)' : '')
                );

                safeUpdateElement('insight-payment',
                    (data.successfulPayments || 0) + ' successful / ' + (data.failedPayments || 0) + ' failed'
                );

                // Update modal title
                document.getElementById('analyticsModalLabel').innerHTML =
                    '<i class="fas fa-chart-line"></i> Analytics - Customer #' + customerId;

            } else {
                showAnalyticsError(data.message || 'Failed to load analytics');
            }
        }

        // ✅ SAFE: Helper function to update elements
        function safeUpdateElement(elementId, value) {
            const element = document.getElementById(elementId);
            if (element) {
                element.textContent = value;
            } else {
                console.warn('Element not found:', elementId);
            }
        }

        function showAnalyticsError(message) {
            const loadingSpinner = document.getElementById('loadingSpinner');
            const customerAnalytics = document.getElementById('customerAnalytics');

            if (loadingSpinner) loadingSpinner.style.display = 'none';

            if (customerAnalytics) {
                customerAnalytics.style.display = 'block';
                customerAnalytics.innerHTML = `
                    <div class="alert alert-danger text-center py-4">
                        <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                        <h5>Unable to Load Analytics</h5>
                        <p class="mb-3">${message}</p>
                        <button class="btn btn-primary" onclick="retryAnalytics()">
                            <i class="fas fa-redo"></i> Try Again
                        </button>
                    </div>
                `;
            }
        }

        function retryAnalytics() {
            if (currentCustomerId) {
                initializeAnalyticsModal(currentCustomerId);
            }
        }

        // Navigation functions
        function viewCustomerOrders() {
            if (currentCustomerId) {
                window.location.href = '@Url.Action("Orders", "Admin")?customerId=' + currentCustomerId;
            }
        }

        function viewAllOrders() {
            if (currentCustomerId) {
                window.location.href = '@Url.Action("Orders", "Admin")?customerId=' + currentCustomerId;
            }
        }

        // ✅ Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Customer management page loaded');

            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}


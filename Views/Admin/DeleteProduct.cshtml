@model Admin.Models.Products
@{
    ViewData["Title"] = "Delete Product";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash-alt"></i> Delete Product</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this product?</h5>
                    <p class="text-muted">This action cannot be undone.</p>

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                @if (!string.IsNullOrEmpty(Model.Pro_imagename))
                                {
                                    <div class="col-md-4">
                                        <img src="~/Content/Images/@Model.Pro_imagename" class="img-fluid rounded"
                                             onerror="this.src='https://via.placeholder.com/150x150?text=No+Image'">
                                    </div>
                                }
                                <div class="@(!string.IsNullOrEmpty(Model.Pro_imagename) ? "col-md-8" : "col-12")">
                                    <h5>@Model.Pro_name</h5>
                                    <p class="text-muted">@Model.Pro_des</p>
                                    <div class="d-flex justify-content-between">
                                        <span class="badge bg-primary">@Model.Pro_category</span>
                                        <h5 class="text-primary">Rs @Model.Pro_price</h5>
                                    </div>
                                    <small class="text-muted">Product ID: @Model.Pro_id</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FIX 1: Use the same action name with HttpPost -->
                    <form asp-action="DeleteProduct" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Pro_id" name="id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger me-md-2">
                                <i class="fas fa-trash-alt"></i> Yes, Delete
                            </button>
                            <a asp-action="Products" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>
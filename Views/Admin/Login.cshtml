@{
    ViewData["Title"] = "Admin Login";
}

<div class="admin-login-container">
    <div class="login-wrapper">
        <!-- Left Side - Decorative -->
        <div class="login-left">
            <div class="login-hero">
                <div class="hero-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h1>Admin Portal</h1>
                <p>Manage your floral business with powerful tools and insights</p>
                <div class="features-list">
                    <div class="feature-item">
                        <i class="fas fa-chart-line"></i>
                        <span>Dashboard Analytics</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-box"></i>
                        <span>Product Management</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Order Tracking</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-users"></i>
                        <span>Customer Insights</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-right">
            <div class="login-card">
                <div class="card-header">
                    <div class="header-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h2>Admin Login</h2>
                    <p>Enter your credentials to access the dashboard</p>
                </div>

                <div class="card-body">
                    <!-- Success/Error Messages -->
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i>
                            @TempData["success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post" id="loginForm" class="login-form">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="username" class="form-label">
                                <i class="fas fa-user"></i> Username
                            </label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Enter admin username" required>
                                <span class="input-icon">
                                    <i class="fas fa-user-cog"></i>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">
                                <i class="fas fa-key"></i> Password
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Enter your password" required>
                                <span class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="form-options">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a href="#" class="forgot-link">Forgot Password?</a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn-login">
                                <i class="fas fa-sign-in-alt"></i>
                                <span>Sign In to Dashboard</span>
                            </button>
                        </div>
                    </form>

                    <div class="login-footer">
                        <div class="security-notice">
                            <i class="fas fa-shield-alt"></i>
                            <span>Secure admin access only</span>
                        </div>
                        <a href="@Url.Action("Index", "Home")" class="back-home">
                            <i class="fas fa-arrow-left"></i> Back to Homepage
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();

            if (!username || !password) {
                e.preventDefault();
                showMessage('Please enter both username and password.', 'error');
            }
        });

        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.querySelector('.password-toggle i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                toggleIcon.className = 'fas fa-eye';
            }
        }

        function showMessage(message, type) {
            // Create toast notification
            const toast = document.createElement('div');
            toast.className = `alert-toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'error' ? 'exclamation-triangle' : 'check-circle'}"></i>
                <span>${message}</span>
            `;

            document.body.appendChild(toast);

            // Remove after 3 seconds
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Add focus effects
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });

            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.parentElement.classList.remove('focused');
                }
            });
        });
    </script>
}

<style>
    .admin-login-container {
        min-height: 100vh;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        font-family: 'Roboto', sans-serif;
    }

    .login-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1200px;
        width: 100%;
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        min-height: 700px;
    }

    /* Left Side Styles - YOUR THEME */
    .login-left {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        padding: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

        .login-left::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: float 20s infinite linear;
        }

    @@keyframes float {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }

        100% {
            transform: translate(-50px, -50px) rotate(360deg);
        }
    }

    .login-hero {
        text-align: center;
        color: #000;
        z-index: 2;
        position: relative;
    }

    .hero-icon {
        font-size: 80px;
        margin-bottom: 30px;
        color: #000;
    }

    .login-hero h1 {
        font-family: 'Playfair Display', serif;
        font-size: 36px;
        margin-bottom: 15px;
        font-weight: 700;
    }

    .login-hero p {
        font-size: 18px;
        margin-bottom: 40px;
        opacity: 0.8;
    }

    .features-list {
        text-align: left;
        max-width: 300px;
        margin: 0 auto;
    }

    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        font-size: 16px;
        font-weight: 500;
    }

        .feature-item i {
            font-size: 20px;
            margin-right: 15px;
            color: #000;
            width: 25px;
        }

    /* Right Side Styles */
    .login-right {
        padding: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
    }

    .card-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .header-icon {
        font-size: 50px;
        color: #4CAF50; /* Changed to your theme green */
        margin-bottom: 20px;
    }

    .card-header h2 {
        font-family: 'Playfair Display', serif;
        font-size: 32px;
        margin-bottom: 10px;
        color: #333;
    }

    .card-header p {
        color: #666;
        font-size: 16px;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #333;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .form-label i {
            margin-right: 8px;
            color: #4CAF50; /* Changed to your theme green */
        }

    .input-group {
        position: relative;
        display: flex;
        align-items: center;
    }

    .form-control {
        width: 100%;
        padding: 15px 50px 15px 20px;
        border: 2px solid #e1e5e9;
        border-radius: 12px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }

        .form-control:focus {
            border-color: #4CAF50; /* Changed to your theme green */
            background: white;
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.1);
            outline: none;
        }

    .input-icon {
        position: absolute;
        right: 20px;
        color: #4CAF50; /* Changed to your theme green */
        font-size: 18px;
    }

    .password-toggle {
        position: absolute;
        right: 50px;
        background: none;
        border: none;
        color: #666;
        cursor: pointer;
        font-size: 16px;
        transition: color 0.3s ease;
    }

        .password-toggle:hover {
            color: #4CAF50; /* Changed to your theme green */
        }

    /* Form Options */
    .form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        font-size: 14px;
    }

    .form-check {
        display: flex;
        align-items: center;
    }

    .form-check-input {
        margin-right: 8px;
    }

        .form-check-input:checked {
            background-color: #4CAF50; /* Changed to your theme green */
            border-color: #4CAF50;
        }

    .forgot-link {
        color: #4CAF50; /* Changed to your theme green */
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .forgot-link:hover {
            color: #388E3C; /* Darker green */
        }

    /* Login Button - YOUR THEME COLORS */
    .btn-login {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        color: #000;
        border: none;
        padding: 18px 30px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            background: linear-gradient(to right, #C1E1C1, #FFDAB9);
        }

        .btn-login:active {
            transform: translateY(0);
        }

    /* Footer */
    .login-footer {
        margin-top: 30px;
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #e1e5e9;
    }

    .security-notice {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        color: #4CAF50; /* Changed to your theme green */
        font-size: 14px;
        margin-bottom: 15px;
        font-weight: 500;
    }

    .back-home {
        color: #666;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .back-home:hover {
            color: #4CAF50; /* Changed to your theme green */
        }

    /* Alert Styles - UPDATED WITH YOUR THEME */
    .alert {
        border: none;
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .alert-success {
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        color: #000;
        border-left: 4px solid #4CAF50;
    }

    .alert-danger {
        background: #ffe4e4;
        color: #d32f2f;
        border-left: 4px solid #f44336;
    }

    .alert i {
        margin-right: 8px;
    }

    /* Toast Notification - UPDATED */
    .alert-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        padding: 15px 20px;
        border-radius: 10px;
        color: white;
        font-weight: 500;
        z-index: 1000;
        animation: slideIn 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .alert-toast.error {
            background: #f44336;
        }

        .alert-toast.success {
            background: linear-gradient(to right, #FFDAB9, #C1E1C1);
            color: #000;
        }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* Responsive Design */
    @@media (max-width: 968px) {
        .login-wrapper {
            grid-template-columns: 1fr;
            max-width: 500px;
        }

        .login-left {
            display: none;
        }

        .login-right {
            padding: 40px 30px;
        }
    }

    @@media (max-width: 480px) {
        .admin-login-container {
            padding: 10px;
        }

        .login-right {
            padding: 30px 20px;
        }

        .card-header h2 {
            font-size: 28px;
        }

        .form-options {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
    }
</style>
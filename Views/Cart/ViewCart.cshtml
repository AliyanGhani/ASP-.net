@model Admin.Models.Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="page-title"><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>
            <hr class="theme-divider">
        </div>
    </div>

    @if (Model?.CartItems != null && Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card theme-card">
                    <div class="card-header theme-card-header">
                        <h5 class="mb-0"><i class="fas fa-list"></i> Cart Items (@Model.CartItems.Sum(ci => ci.Quantity) items)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row align-items-center mb-4 pb-3 cart-item-border">
                                <!-- Product Image -->
                                <div class="col-md-2 text-center">
                                    @if (!string.IsNullOrEmpty(item.Product.Pro_imagename))
                                    {
                                        <img src="~/Content/Images/@item.Product.Pro_imagename"
                                             class="img-fluid rounded cart-item-image"
                                             alt="@item.Product.Pro_name"
                                             onerror="this.src='https://via.placeholder.com/80x80?text=No+Image'">
                                    }
                                    else
                                    {
                                        <div class="cart-placeholder rounded d-flex align-items-center justify-content-center mx-auto">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </div>

                                <!-- Product Details -->
                                <div class="col-md-3">
                                    <h6 class="mb-1 product-name">@item.Product.Pro_name</h6>
                                    <p class="text-muted small mb-0">@item.Product.Pro_category</p>
                                    <p class="product-price mb-0">Rs @item.Price</p>
                                </div>

                                <!-- Quantity Controls -->
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="me-2 fw-bold quantity-label">Qty:</span>
                                        <form method="post" action="@Url.Action("UpdateQuantity", "Cart")" class="d-flex align-items-center">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <div class="input-group quantity-group">
                                                <button class="btn quantity-btn" type="submit"
                                                        name="quantity" value="@(item.Quantity - 1)"
                                                        @(item.Quantity <= 1 ? "disabled" : "")>
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <input type="text" class="form-control text-center quantity-input"
                                                       value="@item.Quantity" readonly>
                                                <button class="btn quantity-btn" type="submit"
                                                        name="quantity" value="@(item.Quantity + 1)"
                                                        @(item.Quantity >= 10 ? "disabled" : "")>
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <!-- Item Total & Remove -->
                                <div class="col-md-2 text-center">
                                    <h6 class="mb-0 item-total">Rs @(item.Quantity* item.Price)</h6>
                                </div>

                                <div class="col-md-2 text-center">
                                    <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn remove-btn"
                                                onclick="return confirm('Remove @item.Product.Pro_name from cart?')">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-3 d-flex gap-2 cart-actions">
                    <form method="post" action="@Url.Action("ClearCart", "Cart")">
                        <button type="submit" class="btn clear-cart-btn"
                                onclick="return confirm('Clear entire cart?')">
                            <i class="fas fa-trash"></i> Clear Entire Cart
                        </button>
                    </form>
                    <a href="@Url.Action("Shop", "Home")" class="btn continue-shopping-btn">
                        <i class="fas fa-shopping-bag"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card theme-card">
                    <div class="card-header order-summary-header">
                        <h5 class="mb-0"><i class="fas fa-receipt"></i> Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2 summary-item">
                            <span>Items Total:</span>
                            <span>Rs @Model.TotalAmount</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 summary-item">
                            <span>Delivery Charge:</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 summary-item">
                            <span>Tax:</span>
                            <span>Rs 0.00</span>
                        </div>
                        <hr class="theme-divider">
                        <div class="d-flex justify-content-between mb-3 total-amount">
                            <span>Total Amount:</span>
                            <span class="total-price">Rs @Model.TotalAmount</span>
                        </div>

                        <!-- Checkout Button -->
                        <a href="@Url.Action("Checkout", "Order")" class="btn checkout-btn w-100">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </a>

                        <div class="mt-2 text-center security-info">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt"></i> Secure Checkout •
                                <i class="fas fa-truck"></i> Free Delivery
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 empty-cart">
            <i class="fas fa-shopping-cart empty-cart-icon"></i>
            <h3 class="empty-cart-title">Your Cart is Empty</h3>
            <p class="empty-cart-message">Looks like you haven't added any beautiful bouquets to your cart yet.</p>
            <a href="@Url.Action("Shop", "Home")" class="btn primary-btn">
                <i class="fas fa-shopping-bag"></i> Start Shopping
            </a>
        </div>
    }
</div>

<!-- Success/Error Messages -->
@if (TempData["success"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show theme-toast success-toast" role="alert">
            <div class="toast-header">
                <i class="fas fa-check-circle me-2 text-success"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["success"]
            </div>
        </div>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show theme-toast error-toast" role="alert">
            <div class="toast-header">
                <i class="fas fa-exclamation-circle me-2 text-danger"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["error"]
            </div>
        </div>
    </div>
}

<style>
    /* Theme-based Styling */
    .page-title {
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 1rem;
    }

    .theme-divider {
        border: none;
        height: 2px;
        background: linear-gradient(to right, #FFDAB9, #C1E1C1);
        margin: 1.5rem 0;
    }

    .theme-card {
        border: 2px solid #FFDAB9;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        background: linear-gradient(135deg, #FFF9F5, #F8FFF8);
    }

    .theme-card-header {
        background: linear-gradient(135deg, #4CAF50, #45a049) !important;
        color: white;
        border-radius: 13px 13px 0 0 !important;
        border: none;
        font-weight: 600;
    }

    .order-summary-header {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1) !important;
        color: #000;
        border-radius: 13px 13px 0 0 !important;
        border: none;
        font-weight: 600;
    }

    .cart-item-border {
        border-bottom: 2px solid #FFDAB9;
    }

    .cart-item-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border: 2px solid #FFDAB9;
    }

    .cart-placeholder {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        border: 2px solid #FFDAB9;
    }

        .cart-placeholder i {
            font-size: 1.5rem;
        }

    .product-name {
        font-weight: 600;
        color: #2c3e50;
        font-family: 'Playfair Display', serif;
    }

    .product-price {
        color: #4CAF50;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .quantity-label {
        color: #2c3e50;
        font-weight: 600;
    }

    .quantity-group {
        border-radius: 12px;
        overflow: hidden;
        border: 2px solid #FFDAB9;
        background: white;
        width: 120px;
    }

    .quantity-btn {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        border: none;
        color: #000;
        font-weight: bold;
        padding: 6px 12px;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .quantity-btn:hover:not(:disabled) {
            background: linear-gradient(135deg, #C1E1C1, #FFDAB9);
            color: #000;
        }

        .quantity-btn:disabled {
            background: #e9ecef;
            color: #6c757d;
            cursor: not-allowed;
        }

    .quantity-input {
        border: none;
        background: #FFF9F5;
        font-weight: 600;
        color: #2c3e50;
        outline: none;
        border-left: 1px solid #FFDAB9 !important;
        border-right: 1px solid #FFDAB9 !important;
    }

    .item-total {
        color: #4CAF50;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .remove-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 6px 12px;
        font-size: 0.875rem;
        transition: all 0.3s ease;
    }

        .remove-btn:hover {
            background: linear-gradient(135deg, #ee5a52, #ff6b6b);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
            color: white;
        }

    .cart-actions {
        flex-wrap: wrap;
    }

    .clear-cart-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .clear-cart-btn:hover {
            background: linear-gradient(135deg, #ee5a52, #ff6b6b);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
            color: white;
        }

    .continue-shopping-btn {
        background: linear-gradient(135deg, #FFDAB9, #C1E1C1);
        color: #000;
        border: 2px solid #FFDAB9;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .continue-shopping-btn:hover {
            background: linear-gradient(135deg, #C1E1C1, #FFDAB9);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 218, 185, 0.4);
            color: #000;
            text-decoration: none;
        }

    .summary-item {
        color: #2c3e50;
        font-weight: 500;
    }

    .total-amount {
        font-size: 1.2rem;
        font-weight: 700;
    }

    .total-price {
        color: #4CAF50;
        font-size: 1.3rem;
    }

    .checkout-btn {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

        .checkout-btn:hover {
            background: linear-gradient(135deg, #45a049, #4CAF50);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            color: white;
        }

    .security-info {
        font-size: 0.875rem;
    }

    .empty-cart {
        padding: 4rem 0;
    }

    .empty-cart-icon {
        font-size: 5rem;
        color: #FFDAB9;
        margin-bottom: 1.5rem;
    }

    .empty-cart-title {
        font-family: 'Playfair Display', serif;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .empty-cart-message {
        color: #6c757d;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .primary-btn {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        text-decoration: none;
        display: inline-block;
    }

        .primary-btn:hover {
            background: linear-gradient(135deg, #45a049, #4CAF50);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.4);
            color: white;
            text-decoration: none;
        }

    .theme-toast {
        border: 2px solid #FFDAB9;
        border-radius: 10px;
        background: linear-gradient(135deg, #FFF9F5, #F8FFF8);
    }

    .success-toast .toast-header {
        background: linear-gradient(135deg, #d4edda, #c3e6cb);
        color: #155724;
    }

    .error-toast .toast-header {
        background: linear-gradient(135deg, #f8d7da, #f5c6cb);
        color: #721c24;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .page-title {
            font-size: 1.8rem;
        }

        .cart-item-border {
            text-align: center;
        }

        .cart-actions {
            justify-content: center;
        }

        .clear-cart-btn,
        .continue-shopping-btn {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>
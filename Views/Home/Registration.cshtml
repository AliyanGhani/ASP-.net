@{
    ViewData["Title"] = "Florist Registration - Java Florist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Page Header */
    .page-header {
        background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1563241527-3004b7be0ffd?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        padding: 200px 20px;
        margin-bottom: 40px;
    }

        .page-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            margin-bottom: 20px;
        }

        .page-header p {
            font-size: 20px;
            max-width: 700px;
            margin: 0 auto;
        }

    /* Registration Section */
    .registration-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-bottom: 60px;
    }

    .registration-info {
        flex: 1;
        min-width: 300px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

        .registration-info h2 {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            color: #4CAF50;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #4CAF50;
        }

    .benefits-list {
        list-style: none;
        margin-bottom: 30px;
    }

        .benefits-list li {
            padding: 15px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

            .benefits-list li:last-child {
                border-bottom: none;
            }

        .benefits-list i {
            color: #4CAF50;
            font-size: 20px;
            margin-right: 15px;
            width: 25px;
        }

    .testimonial {
        background-color: #F1F8E9;
        padding: 20px;
        border-radius: 10px;
        margin-top: 30px;
    }

    .testimonial-text {
        font-style: italic;
        margin-bottom: 15px;
        line-height: 1.6;
    }

    .testimonial-author {
        display: flex;
        align-items: center;
    }

    .testimonial-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 15px;
    }

    .author-info h4 {
        color: #4CAF50;
        margin-bottom: 5px;
    }

    /* Registration Form */
    .registration-form {
        flex: 2;
        min-width: 300px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .form-header h2 {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            color: #4CAF50;
            margin-bottom: 10px;
        }

        .form-header p {
            color: #666;
        }

    .form-progress {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        position: relative;
    }

        .form-progress:before {
            content: '';
            position: absolute;
            top: 15px;
            left: 0;
            right: 0;
            height: 2px;
            background-color: #eee;
            z-index: 1;
        }

    .progress-step {
        position: relative;
        z-index: 2;
        text-align: center;
        width: 33.33%;
    }

        .progress-step .step-number {
            width: 30px;
            height: 30px;
            background-color: #4CAF50;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
            font-weight: bold;
        }

        .progress-step.active .step-number {
            background-color: #FF9800;
        }

        .progress-step.completed .step-number {
            background-color: #8BC34A;
        }

    .step-title {
        font-size: 14px;
        color: #666;
    }

    .progress-step.active .step-title {
        color: #4CAF50;
        font-weight: bold;
    }

    .form-section {
        display: none;
    }

        .form-section.active {
            display: block;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #333;
        }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #4CAF50;
            outline: none;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.2);
        }

    .form-row {
        display: flex;
        gap: 20px;
    }

        .form-row .form-group {
            flex: 1;
        }

    .form-hint {
        font-size: 14px;
        color: #666;
        margin-top: 5px;
    }

    .required {
        color: #ff5252;
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #388E3C;
            transform: translateY(-2px);
        }

    .btn-outline {
        background-color: transparent;
        border: 1px solid #4CAF50;
        color: #4CAF50;
    }

        .btn-outline:hover {
            background-color: #4CAF50;
            color: white;
        }

    .btn-next {
        background-color: #FF9800;
    }

        .btn-next:hover {
            background-color: #F57C00;
        }

    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .form-check-input {
        margin-right: 10px;
    }

    .form-check-label {
        margin-bottom: 0;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .registration-container {
            flex-direction: column;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .page-header h1 {
            font-size: 36px;
        }

        .page-header p {
            font-size: 18px;
        }
    }
</style>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Become a Florist Partner</h1>
        <p>Join our network of professional florists and grow your business with us</p>
    </div>
</section>

<!-- Registration Content -->
<div class="container">
    <div class="registration-container">
        <!-- Registration Benefits -->
        <div class="registration-info">
            <h2>Why Join Us?</h2>
            <ul class="benefits-list">
                <li>
                    <i class="fas fa-users"></i>
                    <div>
                        <h3>Access to More Customers</h3>
                        <p>Reach thousands of potential customers through our platform</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-chart-line"></i>
                    <div>
                        <h3>Business Growth</h3>
                        <p>Increase your sales by up to 40% with our marketing support</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-tools"></i>
                    <div>
                        <h3>Easy-to-Use Tools</h3>
                        <p>Manage orders, inventory, and deliveries with our simple dashboard</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-shield-alt"></i>
                    <div>
                        <h3>Secure Payments</h3>
                        <p>Get paid on time with our reliable payment system</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-gift"></i>
                    <div>
                        <h3>Marketing Support</h3>
                        <p>We promote your florist business through our channels</p>
                    </div>
                </li>
            </ul>

            <div class="testimonial">
                <p class="testimonial-text">"Since joining Java Florist, my business has grown by 60%. The platform is easy to use, and the support team is always helpful."</p>
                <div class="testimonial-author">
                    <img src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80" alt="Sarah Johnson" class="testimonial-avatar">
                    <div class="author-info">
                        <h4>Sarah Johnson</h4>
                        <p>Blossom Flowers, NYC</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Registration Form -->
        <div class="registration-form">
            <div class="form-header">
                <h2>Florist Registration</h2>
                <p>Complete the form below to become a partner florist</p>
            </div>

            <div class="form-progress">
                <div class="progress-step active">
                    <div class="step-number">1</div>
                    <div class="step-title">Business Info</div>
                </div>
                <div class="progress-step">
                    <div class="step-number">2</div>
                    <div class="step-title">Personal Details</div>
                </div>
                <div class="progress-step">
                    <div class="step-number">3</div>
                    <div class="step-title">Documents</div>
                </div>
            </div>

            @using (Html.BeginForm("RegisterFlorist", "Account", FormMethod.Post, new { @id = "registrationForm" }))
            {
                @Html.AntiForgeryToken()

                <!-- Step 1: Business Information -->
                <div class="form-section active" id="step1">
                    <h3>Business Information</h3>
                    <p class="form-hint">Please provide your business details</p>

                    <div class="form-group">
                        <label for="businessName">Business Name <span class="required">*</span></label>
                        <input type="text" id="businessName" name="businessName" class="form-control" placeholder="Enter your business name" required>
                    </div>

                    <div class="form-group">
                        <label for="businessType">Business Type <span class="required">*</span></label>
                        <select id="businessType" name="businessType" class="form-control" required>
                            <option value="">Select business type</option>
                            <option value="florist">Florist Shop</option>
                            <option value="nursery">Plant Nursery</option>
                            <option value="home">Home-Based Business</option>
                            <option value="online">Online Only</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="yearsOperation">Years in Operation <span class="required">*</span></label>
                        <select id="yearsOperation" name="yearsOperation" class="form-control" required>
                            <option value="">Select years</option>
                            <option value="0-1">Less than 1 year</option>
                            <option value="1-3">1-3 years</option>
                            <option value="3-5">3-5 years</option>
                            <option value="5-10">5-10 years</option>
                            <option value="10+">10+ years</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="businessAddress">Business Address <span class="required">*</span></label>
                        <textarea id="businessAddress" name="businessAddress" class="form-control" rows="3" placeholder="Full business address" required></textarea>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="city">City <span class="required">*</span></label>
                            <input type="text" id="city" name="city" class="form-control" placeholder="City" required>
                        </div>
                        <div class="form-group">
                            <label for="zipCode">ZIP Code <span class="required">*</span></label>
                            <input type="text" id="zipCode" name="zipCode" class="form-control" placeholder="ZIP Code" required>
                        </div>
                    </div>

                    <div class="form-footer">
                        <div></div>
                        <button type="button" class="btn btn-next" onclick="nextStep(1)">Next <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>

                <!-- Step 2: Personal Details -->
                <div class="form-section" id="step2">
                    <h3>Personal Details</h3>
                    <p class="form-hint">Please provide your contact information</p>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name <span class="required">*</span></label>
                            <input type="text" id="firstName" name="firstName" class="form-control" placeholder="First name" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name <span class="required">*</span></label>
                            <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Last name" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address <span class="required">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Your email address" required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number <span class="required">*</span></label>
                        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Your phone number" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Create Password <span class="required">*</span></label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Create a secure password" required>
                        <p class="form-hint">Must be at least 8 characters with uppercase, lowercase, and number</p>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password <span class="required">*</span></label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm your password" required>
                    </div>

                    <div class="form-footer">
                        <button type="button" class="btn btn-outline" onclick="prevStep(2)"><i class="fas fa-arrow-left"></i> Previous</button>
                        <button type="button" class="btn btn-next" onclick="nextStep(2)">Next <i class="fas fa-arrow-right"></i></button>
                    </div>
                </div>

                <!-- Step 3: Documents & Agreement -->
                <div class="form-section" id="step3">
                    <h3>Documents & Agreement</h3>
                    <p class="form-hint">Upload required documents and agree to terms</p>

                    <div class="form-group">
                        <label for="businessLicense">Business License <span class="required">*</span></label>
                        <input type="file" id="businessLicense" name="businessLicense" class="form-control" accept=".pdf,.jpg,.png" required>
                        <p class="form-hint">Upload a copy of your business license (PDF, JPG, or PNG)</p>
                    </div>

                    <div class="form-group">
                        <label for="taxId">Tax ID Certificate <span class="required">*</span></label>
                        <input type="file" id="taxId" name="taxId" class="form-control" accept=".pdf,.jpg,.png" required>
                        <p class="form-hint">Upload a copy of your tax identification certificate</p>
                    </div>

                    <div class="form-group">
                        <label for="portfolio">Portfolio (Optional)</label>
                        <input type="file" id="portfolio" name="portfolio" class="form-control" accept=".pdf,.jpg,.png" multiple>
                        <p class="form-hint">Upload photos of your floral arrangements (max 5 files)</p>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" id="agreeTerms" name="agreeTerms" class="form-check-input" required>
                            <label for="agreeTerms" class="form-check-label">I agree to the <a href="#">Terms of Service</a> and <a href="#">Partner Agreement</a> <span class="required">*</span></label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input type="checkbox" id="agreePrivacy" name="agreePrivacy" class="form-check-input" required>
                            <label for="agreePrivacy" class="form-check-label">I agree to the <a href="#">Privacy Policy</a> <span class="required">*</span></label>
                        </div>
                    </div>

                    <div class="form-footer">
                        <button type="button" class="btn btn-outline" onclick="prevStep(3)"><i class="fas fa-arrow-left"></i> Previous</button>
                        <button type="submit" class="btn">Submit Application</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Multi-step form functionality
        function nextStep(currentStep) {
            // Hide current step
            document.getElementById('step' + currentStep).classList.remove('active');
            document.querySelectorAll('.progress-step')[currentStep - 1].classList.remove('active');
            document.querySelectorAll('.progress-step')[currentStep - 1].classList.add('completed');

            // Show next step
            document.getElementById('step' + (currentStep + 1)).classList.add('active');
            document.querySelectorAll('.progress-step')[currentStep].classList.add('active');
        }

        function prevStep(currentStep) {
            // Hide current step
            document.getElementById('step' + currentStep).classList.remove('active');
            document.querySelectorAll('.progress-step')[currentStep - 1].classList.remove('active');

            // Show previous step
            document.getElementById('step' + (currentStep - 1)).classList.add('active');
            document.querySelectorAll('.progress-step')[currentStep - 2].classList.add('active');
            document.querySelectorAll('.progress-step')[currentStep - 2].classList.remove('completed');
        }

        // Form submission
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registrationForm');

            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Basic validation
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;

                if (password !== confirmPassword) {
                    alert('Passwords do not match!');
                    return;
                }

                if (password.length < 8) {
                    alert('Password must be at least 8 characters long!');
                    return;
                }

                alert('Thank you for your application! We will review your information and contact you within 3 business days.');

                // In a real application, this would submit the form data to a server
                // form.submit();
            });
        });
    </script>
}